{
  "manifest_version": 3,
  "name": "MAL to Stremio",
  "version": "1.3",
  "description": "Adds a 'Play in Stremio' button to MyAnimeList anime pages.",
  
  "content_scripts": [
    {
      "matches": ["https://myanimelist.net/anime/*"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["stremio.svg"],
      "matches": ["https://myanimelist.net/*"]
    }
  ]
}