{
  "manifest_version": 3,
  "name": "MAL & AniList to Stremio",
  "version": "4.5.0",
  "description": "Adds a 'Watch on Stremio' button to MyAnimeList and AniList pages.",
  
  "content_scripts": [
    {
      "matches": [
        "https://myanimelist.net/anime/*",
        "https://myanimelist.net/topanime.php*",
        "https://anilist.co/anime/*"
      ],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icon48.png"],
      "matches": [
        "https://myanimelist.net/*",
        "https://anilist.co/*"
      ]
    }
  ],

  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}