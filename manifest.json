{
  "manifest_version": 3,
  "name": "MAL to Stremio",
  "version": "1.5",
  "description": "Adds a 'Play in Stremio' button to MyAnimeList anime pages.",
  
  "content_scripts": [
    {
      "matches": ["https://myanimelist.net/anime/*"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icon48.png"],
      "matches": ["https://myanimelist.net/*"]
    }
  ],

  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}